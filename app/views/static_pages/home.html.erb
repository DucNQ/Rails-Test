<% if signed_in? %>
  <div class="row">
	<aside class="span4">
  	  <section>
   		<%= render 'shared/user_info' %>
  	  </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
	</aside>
	<div class="span8">
	  <h3>Entry Feed</h3>
	  <%= render 'shared/feed' %>
	</div>
  </div>
<% else %>
  <div class="center hero-unit">
	<h1>Welcome to the Blog website</h1>
	<h2>
	  this website helps you connect with friends all over the localhost
	</h2>
	<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %> 
  </div>
  <div class="span8">
	<h3>User posts</h3>
	<%= render 'shared/feed' %>
  </div>
<% end %>