<% provide(:title, 'New entry') %>
<h1>New entry</h1>

<div class="row">
  <!-- <div class="span6 offset3"> -->
    <%= form_for(@entry) do |f| %>
      <%= render 'shared/entry_error_messages' %>
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :body %>
      <%= f.text_area :body, size: "30x20" %>

      <%= f.submit "Post", class: "btn btn-large btn-primary" %>
    <% end %>
  <!-- </div> -->
</div>